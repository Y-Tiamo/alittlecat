<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/night_mode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_night_mode" />

        <TextView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/image_button1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="夜间" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_set" />

        <TextView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/image_button2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_button3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_date_count" />

        <TextView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/image_button3"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_button4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_finish" />

        <TextView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/image_button4"
            android:layout_weight="1"
            android:gravity="center"
            android:text="退出" />
    </LinearLayout>

</LinearLayout>